<body>
  <h1>Editing Book</h1>

<div class = flash><% if @book.errors.any? %></div>
    <ul>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>



<div><%= form_with model:@book, url:"/books/#{@book.id}", local: true do |f| %>
  <ul>
    <li>Title</li>
    <li class = field><%= f.text_field :title %></li>
    <li>Body</li>
    <li class = field><%= f.text_area :body %></li>
    <li class = field><%= f.submit 'Update Book' %></li>
    <% end %>
  </ul>
</div>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
</body>


